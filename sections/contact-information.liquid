<div class="contact-information page-width">
  <div class="a-contacts">
    {% for block in section.blocks %}
    <div class="support">
      <i class="fa {{ block.settings.icon }}"></i>
      <h2>{{ block.settings.title }}</h2>
      {{ block.settings.content }}
      {% if block.settings.btn-text != "" %}
        {% if block.settings.title contains 'Chat' %}
          <a id="liveagent_button_online_5733t000000Y0ci" href="javascript://Chat" onclick="liveagent.startChat('5733t000000Y0ci')" style="display: none;">Live Chat</a><div id="liveagent_button_offline_5733t000000Y0ci" style="display: none;">Offline now</div>
          <script type="text/javascript">
            if (!window._laq) { window._laq = []; }
            window._laq.push(function(){liveagent.showWhenOnline('5733t000000Y0ci', document.getElementById('liveagent_button_online_5733t000000Y0ci'));
            liveagent.showWhenOffline('5733t000000Y0ci', document.getElementById('liveagent_button_offline_5733t000000Y0ci'));
            });</script>
        {% else %}
          <a href="{{ block.settings.btn-url }}"> {{ block.settings.btn-text }}</a>
        {% endif %}
      {% endif %}
    </div>
    {% endfor %}
  </div>
  <div class="service-hour">
    <h2>Customer Service Hours</h2>
    <div class="period-container">
      <div class="period-1">
        <h3>{{ section.settings.period-1-title }}&nbsp;:</h3>
        {{ section.settings.period-1-service }}
      </div>
      <div class="period-2">
        <h3>{{ section.settings.period-2-title }}&nbsp;:</h3>
        {{ section.settings.period-2-service }}
      </div>
      <div class="period-3">
        <h3>{{ section.settings.period-3-title }}&nbsp;:</h3>
        {{ section.settings.period-3-service }}
      </div>
    </div>
  </div>
</div>
<script type='text/javascript' src='https://c.la3-c1cs-was.salesforceliveagent.com/content/g/js/36.0/deployment.js'></script>
 <script type="text/javascript">
  liveagent.init('https://d.la1-c1-ia5.salesforceliveagent.com/chat', '5723t000000gO81', '00D3t000000dhOd');
</script>
